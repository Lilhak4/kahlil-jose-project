
<div class="applicants conatiner">
    {{#each applicants}}
    <div class="applicants info">
        <h4>{{this.username}}</h4> 
        <h4>{{this.instrument}}</h4>
    </div>
    <div class="applicants buttons">
        <form method="POST" action="/apply/{{../band._id}}/accept">
            <input type="hidden" name="applyId" value="{{this._id}}">
            <button class="check" type="submit" class="">accept</button>
        </form>
        <form method="POST" action="/apply/{{band._id}}/reject">
            <input type="hidden" name="applyId" value="{{this._id}}">
            <button class="cross" type="submit">reject</button>
        </form>
    </div>      
{{/each}}
</div>
