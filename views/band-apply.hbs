

<div class="applicants container">
{{#each applicants}}
    <div class="applicants info">
        <h4>name: {{ this.username}}<br><br>instrument: {{ this.instrument}}</h4> 
        
    </div>
    <div class="applicants buttons">
        <form method="POST" action="/apply/{{../band._id}}/accept">
            <input type="hidden" name="applyId" value="{{this._id}}">
            <input type="hidden" name="applyInstrument" value="{{this.instrument}}">
            <button class="check" type="submit" class=""><img src="../images/check-btn.png" alt="" class="applicants btn accpet"></button>
        </form>
        <form method="POST" action="/apply/{{../band._id}}/reject">
            <input type="hidden" name="applyId" value="{{this._id}}">
            <button class="cross" type="submit"><img src="../images/cross-btn.png" alt="" class="applicants btn reject"></button>
        </form> 
    </div>   
       <hr class="applicants separe line">
{{/each}}
    <a class="back" href="/band/{{band._id}}">go back</a> 
</div>
